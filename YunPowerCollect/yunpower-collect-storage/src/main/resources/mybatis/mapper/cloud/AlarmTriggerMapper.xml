            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="stationType != null">station_type = #{stationType},</if>
            <if test="deviceId != null">device_id = #{deviceId},</if>
            <if test="deviceSn != null">device_sn = #{deviceSn},</if>
