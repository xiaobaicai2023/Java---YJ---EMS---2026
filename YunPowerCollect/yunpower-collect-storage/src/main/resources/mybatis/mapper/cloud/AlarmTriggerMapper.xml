            id in
            <foreach item="id" collection="params.ids" open="(" separator="," close=")">
                #{id}
            </foreach>
        </if>
        <!-- 数据范围过滤 -->
        ${params.dataScope}
    </update>

    <!-- 批量恢复报警-->
    <update id="batchRestoreAlarm"  parameterType="AlarmTrigger">
        UPDATE
            alarm_trigger
        SET trigger_status = 10, is_auto = 1, recover_time = SYSDATE()
        WHERE
              var_sn = #{varSn}
          and category_id = #{categoryId}
          and create_by = #{createBy}
          and trigger_status = 0
          and happen_time BETWEEN #{params.beginTime} and  #{params.endTime}
    </update>

    <delete id="deleteAlarmTriggerById" parameterType="Long">
        delete from alarm_trigger where id = #{id}
    </delete>

    <delete id="deleteAlarmTriggerByIds" parameterType="String">
        delete from alarm_trigger where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
