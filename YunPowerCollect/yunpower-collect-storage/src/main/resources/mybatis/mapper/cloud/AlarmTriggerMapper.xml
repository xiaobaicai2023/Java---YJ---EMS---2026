            <if test="receiveConcrete != null">receive_concrete = #{receiveConcrete, jdbcType=JAVA_OBJECT, javaType=java.util.List, typeHandler=com.yunpower.collect.storage.domain.handler.JsonCommonTypeHandler},</if>
